meta: 
  "resource-type": "project-settings"
  "version-tag": 1

common_settings:
  application_id: SandboxGame
  max_worker_threads_count: 4
  total_preallocated_memory_size: 134217728
  flags : 20 # RESIZEABLE | ZBUFFER
  additional_mounted_dirs:
    - alias: ProjectResources/
      path: ../../SandboxGame/Resources/
    - alias: ProjectShaders/
      path: ../../SandboxGame/Resources/Shaders/
  user_plugins_list:
    - id: ./TDE2LevelStreamingUtils
    - id: ./TDE2BulletPhysics
    - id: ./TDE2VideoPlayers

graphics_settings:
  graphics_plugin: ./D3D11GraphicsContext
  
quality_presets:
  LOW:
    shadow_maps_size: 512
    shadow_maps_enabled: true
  MEDIUM:
    shadow_maps_size: 1024
    shadow_maps_enabled: true
  HIGH:
    shadow_maps_size: 2048
    shadow_maps_enabled: true
  ULTRA:
    shadow_maps_size: 2048
    shadow_maps_enabled: true


audio_settings:
  audio_plugin: ./FmodAudioContext

localization_settings:
  registered_locales:
    - locale_info:
        id: ru
        package_path: ru_text.localization
    - locale_info:
        id: en
        package_path: ffffff

  current_locale: ru
  